{
  "manifest_version": 2,
  "name": "念的关注桌面通知",
  "description": "简单的关注推送 只推送最新的消息~",
  "version": "1.0",
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
      "default_title": "Nian~念",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "alarms",
    "tabs",
    "webNavigation",
    "notifications",
    "http://*.nian.so/"
  ]
}